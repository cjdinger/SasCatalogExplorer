<src:EntryViewer x:Class="SAS.Tasks.Examples.CatalogExplorer.Viewers.SourceEntryViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:SAS.Tasks.Examples.CatalogExplorer.Viewers" 
    Height="300" Width="300">
    <Grid>
        <TextBox IsReadOnly="True" Margin="1.3,2.25,0,0" Name="txtEntry" 
                 FontFamily="Courier New" HorizontalContentAlignment="Stretch" 
                 VerticalContentAlignment="Stretch" 
                 HorizontalScrollBarVisibility="Auto" 
                 VerticalScrollBarVisibility="Auto" DockPanel.Dock="Bottom"/>
    </Grid>
</src:EntryViewer>
